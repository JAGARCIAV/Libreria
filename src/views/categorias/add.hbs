<div class="container p-4 h-100">
  <div class="row h-75 d-flex align-items-center">
    <div class="col-md-4 mx-auto">
      <div class="card bg-dark">
        <form action="/categorias/add" method="POST" class="card-body">

          <!-- Título y botón de guardar -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light mb-3 h4">Crear Nueva Categoría</h1>
            <button class="btn btn-success btn-block">
              Guardar
            </button>
          </div>

          <label for="nombre">Nombre de la categoría:</label>
          <input
            type="text"
            name="nombre"
            class="form-control bg-dark text-light mb-3"
            placeholder="Nombre"
            autofocus
          />

          <label for="descripcion">Descripción:</label>
          <textarea
            name="descripcion"
            rows="2"
            class="form-control bg-dark text-light mb-3"
            placeholder="Descripción"
          ></textarea>

          <label for="url_imagen">URL de la imagen:</label>
          <input
            type="url"
            name="url_imagen"
            class="form-control bg-dark text-light mb-3"
            placeholder="URL de la imagen"
          />
        </form>
      </div>
    </div>
  </div>
</div>
