<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">Registro</h3>

        <label for="fullname">Escribe tu nombre completo:</label>
        <input type="type" name="fullname" placeholder="Nombre Apellidos" class="form-control mb-3" autofocus />

        <label for="username">Escribe tu correo y/o Gmail:</label>
        <input type="email" name="email" placeholder="Correo@ejemplo.com" class="form-control mb-3" />

        <label for="password">Contraseña:</label>
        <input type="password" name="password1" placeholder="Contraseña" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Confirma tu Contraseña:</label>
        <input type="password" name="password2" placeholder="Contraseña" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Registrar
        </button>
    </div>
    </form>

    {{! Link }}
    <p class="fs-5 text-center text-white mt-3">¿Ya Cuentas con una cuenta ?
      <a href="/signin" class="text-info">Iniciar Secion</a>
    </p>
  </div>
</div>